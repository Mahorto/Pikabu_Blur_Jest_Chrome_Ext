{
	"manifest_version": 2,
	"name": "Pikabu jest hide",
	"version": "1.3",
	"description": "Блюрим тег жесть и NSFW!",
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"128": "128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"app.js"
			]
		}
	],
	"content_scripts": [
		{
			"matches": [
				"https://pikabu.ru/*"
			],
			"js": [
				"app.js"
			]
		}
	]
}